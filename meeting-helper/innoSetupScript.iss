[Setup]
AppName=Meeting helper
AppVerName=Meeting helper 0.1
AppPublisher=Parliament software proiect
AppPublisherURL=http://parliament.sf.net
AppSupportURL=http://parliament.sf.net
AppUpdatesURL=http://parliament.sf.net
DefaultDirName={pf}\Meeting helper
DefaultGroupName=Meeting helper
AllowNoIcons=yes
LicenseFile=C:\parliament\Copying
OutputBaseFilename=setup
Compression=lzma
SolidCompression=yes

[Tasks]
