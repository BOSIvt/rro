[Files]
Source: "C:\parliament\dist\meeting_helper.exe"; DestDir: "{app}"; Flags: ignoreversion
Source: "C:\parliament\dist\*"; DestDir: "{app}"; Flags: ignoreversion recursesubdirs createallsubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
Name: "{group}\Meeting helper"; Filename: "{app}\meeting_helper.exe"
Name: "{userdesktop}\Meeting helper"; Filename: "{app}\meeting_helper.exe"; Tasks: desktopicon

[Run]
Filename: "{app}\meeting_helper.exe"; Description: "{cm:LaunchProgram,Meeting helper}"; Flags: nowait postinstall skipifsilent

